{
  "extends": "eslint:recommended",
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017
  },
  "globals": {
    "console": true,
    "global": true,
    "module": true,
    "require": true,
    "define": true,
    "exports": true
  },
  "rules": {
    "indent": "off",
    "semi": ["error", "always"],

    "require-yield": "off",

    "comma-dangle": "off",
    "no-cond-assign": "off",
    "no-unused-vars": ["error", {"args": "none", "varsIgnorePattern": "^TAG|^__" }],
    "no-extra-boolean-cast": "off",
    "no-constant-condition": "off",
    "no-console": "off"
  }
}
