root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[{*.bat,*.cmd}]
end_of_line = crlf
indent_style = tab

[{.*,*.json,*.yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[{*.sh,env,makefile}]
indent_style = tab

[{*.sln,*.vcxproj,*.vcxproj.filters,*.csproj}]
charset = utf-8-bom
end_of_line = crlf
insert_final_newline = false
